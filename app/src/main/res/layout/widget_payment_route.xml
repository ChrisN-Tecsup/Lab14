<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/widget_payment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: " />

    <TextView
        android:id="@+id/widget_next_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta: " />

    <TextView
        android:id="@+id/widget_time_estimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo: " />

    <Button
        android:id="@+id/widget_payment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagar" />
</LinearLayout>
